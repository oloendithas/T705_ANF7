<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="VideoActionBarTitleText">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="GrayBackgroundActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/VideoActionBarTitleText</item>
    </style>
    <style name="VideoSearchTextStyle" parent="@android:style/Widget.Holo.AutoCompleteTextView">
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="search_button_style" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:src">@drawable/ic_search_api_holo</item>
    </style>
    <style name="VideoTheme.WithActionBarMain" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/videoActionBarNoDisplayOptions</item>
        <item name="android:actionBarTabStyle">@style/videoActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/VideoActionBarTabBar</item>
        <item name="android:actionBarTabTextStyle">@style/VideoActionBarTabText</item>
    </style>
    <style name="videoActionBarTab" parent="@android:style/Widget.DeviceDefault.ActionBar.TabView">
        <item name="android:paddingTop">3.0dip</item>
        <item name="android:maxWidth">80.0dip</item>
        <item name="android:minWidth">80.0dip</item>
    </style>
    <style name="VideoActionBarTabBar" parent="@android:style/Widget.DeviceDefault.ActionBar.TabBar">
        <item name="android:background">@drawable/tw_ab_transparent_light_holo</item>
    </style>
    <style name="videoActionBarNoDisplayOptions" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:height">@dimen/s_videoActionBarNoDisplayOptions_actionbar_height</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="VideoActionBarTabText" parent="@android:style/Widget.DeviceDefault.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:maxWidth">200.0dip</item>
        <item name="android:minWidth">200.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActionBarMenuApperance" parent="@android:style/Widget.Button.Small">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="searchIcon" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:src">@drawable/ic_search_api_holo_light</item>
    </style>
    <style name="MovieTheme.PhoneDefault" parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@color/transparency</item>
    </style>
    <style name="MovieTheme.Translucent" parent="@style/MovieTheme.PhoneDefault">
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="SubtitleTheme.PhoneDefault" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:actionBarStyle">@style/subtitleSettingActionBarNoDisplayOptions</item>
    </style>
    <style name="subtitleSettingActionBarNoDisplayOptions" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:height">0.0dip</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="DialogActivity.Tranparent" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="customActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:titleTextStyle">@style/titleCustom</item>
    </style>
    <style name="customActionBarStyle2" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/titleCustom</item>
    </style>
    <style name="SelectListActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/withTitleCustom</item>
    </style>
    <style name="chapterView" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/black</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="sidechapterView" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/chapterViewAnimation</item>
        <item name="android:background">@color/black</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="chapterViewAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>
    <style name="PreviewAnimation">
        <item name="android:windowEnterAnimation">@anim/preview_in</item>
        <item name="android:windowExitAnimation">@anim/preview_out</item>
    </style>
    <style name="DialogActivityLight" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/subtitleSettingActionBarNoDisplayOptions</item>
    </style>
    <style name="titleCustom">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/tab_font_color</item>
    </style>
    <style name="movietitleCustom">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/tab_focus_font_color</item>
    </style>
    <style name="withTitleCustom">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/tab_font_color</item>
    </style>
    <style name="SearchViewTextStyle" parent="@android:style/Widget.Holo.AutoCompleteTextView">
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="YaSeekBar">
        <item name="android:maxHeight">@dimen/s_YaSeekBar_maxHeight</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/videoplayer_progressbar</item>
        <item name="android:minHeight">@dimen/s_YaSeekBar_minHeight</item>
        <item name="android:thumb">@drawable/videoplayer_seek_thumb</item>
        <item name="android:thumbOffset">@dimen/s_YaSeekBar_thumbOffSet</item>
    </style>
    <style name="YaEasySeekBar">
        <item name="android:maxHeight">@dimen/s_YaSeekBar_maxHeight</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/videoplayer_progressbar</item>
        <item name="android:minHeight">@dimen/s_YaSeekBar_minHeight</item>
        <item name="android:thumb">@drawable/videoplayer_easy_seek_thumb</item>
        <item name="android:thumbOffset">@dimen/s_YaSeekBar_thumbOffSet</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:colorBackground">#ff000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="DialogTransparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="DialogDim">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="DialogBlack">
        <item name="android:windowBackground">@color/mosaic_black_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="WidgetProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">9.0px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/videowidget_progressbar</item>
        <item name="android:minHeight">9.0px</item>
    </style>
    <style name="WidgetProgressMagazine" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">9.0px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/videowidget_magazine_progressbar</item>
        <item name="android:minHeight">9.0px</item>
    </style>
    <style name="WidgetProgressPopup" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">9.0px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/videowidget_popup_progressbar</item>
        <item name="android:minHeight">9.0px</item>
    </style>
    <style name="Keyboardbackground">
        <item name="android:windowBackground">@color/keyboard_transparent_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="customProgressBarThumbnail" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_thumbnail</item>
        <item name="android:minHeight">5.0dip</item>
    </style>
    <style name="brightnessSeekBarTheme">
        <item name="touchwiz:theme">dark</item>
    </style>
</resources>
