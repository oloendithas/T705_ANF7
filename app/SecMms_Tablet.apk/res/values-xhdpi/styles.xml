<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DeviceDefault" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/MsgActionBar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionbarIconDisable</item>
    </style>
    <style name="NewComposeActivityTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/SlideUpFromRightAniStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="ShortcutToast" parent="@android:style/Theme.DeviceDefault" />
    <style name="SlideshowTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="SkinTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/SlideUpFromBottomAniStyle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CreateTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@color/newcomposer_bg_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActivitySlideUpFromRightAniStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CreateThemeForPriorityInbox" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@color/newcomposer_bg_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActivitySlideUpFromRightAniStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionbarIconDisable</item>
    </style>
    <style name="RecipientDropdownStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="Theme.Translucent" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="TwMainListNoMessagesTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TwConversationListSubject">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="ActionbarIconDisable" parent="@android:style/Widget.DeviceDefault.ActionButton.CloseMode">
        <item name="android:visibility">gone</item>
    </style>
    <style name="MsgActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:displayOptions">showTitle</item>
    </style>
</resources>
