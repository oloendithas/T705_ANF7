<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <Button android:id="@id/btn_volumeup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VOLUME_UP"
          xmlns:android="http://schemas.android.com/apk/res/android" />
        <Button android:id="@id/btn_volumedown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VOLUME_DOWN"
          xmlns:android="http://schemas.android.com/apk/res/android" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <Button android:id="@id/btn_num1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_num2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_num3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3"
              xmlns:android="http://schemas.android.com/apk/res/android" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <Button android:id="@id/btn_num4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_num5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_num6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6"
              xmlns:android="http://schemas.android.com/apk/res/android" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <Button android:id="@id/btn_num7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_num8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="8"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_num9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="9"
              xmlns:android="http://schemas.android.com/apk/res/android" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_num0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""
              xmlns:android="http://schemas.android.com/apk/res/android" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <Button android:id="@id/btn_channelup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHANNEL_UP"
          xmlns:android="http://schemas.android.com/apk/res/android" />
        <Button android:id="@id/btn_channeldown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHANNEL_DOWN"
          xmlns:android="http://schemas.android.com/apk/res/android" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <Button android:id="@id/btn_menu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MENU"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="UP"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <Button android:id="@id/btn_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LEFT"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_enter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ENTER"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RIGHT"
              xmlns:android="http://schemas.android.com/apk/res/android" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:id="@id/btn_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DOWN"
              xmlns:android="http://schemas.android.com/apk/res/android" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>