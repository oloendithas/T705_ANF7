<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/auto_sub_empty" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView android:layout_gravity="center" android:background="@drawable/settings_list_icon_noitems_text_based" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:textSize="@dimen/xt9_words_no_words_text_size" android:textColor="@color/xt9_words_list_no_words_color" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/xt9_words_list_no_words" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/xt9_words_list_text_size" android:textColor="@color/xt9_words_list_color" android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="@dimen/xt9_autosubstitution_title_height" android:text="@string/xt9_words_list_shortcut" android:singleLine="true" android:layout_weight="1.0" android:paddingStart="@dimen/xt9_words_list_padding" />
            <TextView android:textSize="@dimen/xt9_words_list_text_size" android:textColor="@color/xt9_words_list_color" android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="@dimen/xt9_autosubstitution_title_height" android:text="@string/xt9_words_list_substitution" android:singleLine="true" android:layout_weight="1.0" android:paddingEnd="@dimen/xt9_words_list_padding" />
        </LinearLayout>
        <View android:background="#90909090" android:layout_width="fill_parent" android:layout_height="2.0px" />
        <ListView android:id="@id/autosubs_listview" android:layout_width="fill_parent" android:layout_height="fill_parent" android:cacheColorHint="#00000000" />
    </LinearLayout>
</LinearLayout>