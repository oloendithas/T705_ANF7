<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShootingModeManagerBaseTheme" parent="@android:style/Theme.DeviceDefault" />
    <style name="ShootingModeManagerTheme" parent="@style/ShootingModeManagerBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Activity.WithActionBar.FullScreen" parent="@style/ShootingModeManagerBaseTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="effect_view_frame_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#fff5f5f5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#ff000000</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="effect_view_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#fff5f5f5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#ff000000</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="manage_effect_title_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#fff5f5f5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:fontFamily">roboto-light</item>
    </style>
</resources>
