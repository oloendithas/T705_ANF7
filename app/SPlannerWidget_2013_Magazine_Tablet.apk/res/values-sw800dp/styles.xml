<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MonthView_WeekLabel">
        <item name="android:textSize">@dimen/month_week_text_size</item>
        <item name="android:textColor">@color/month_week_w</item>
        <item name="android:gravity">top|center</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="MonthView_WeekNameLabel" parent="@style/MonthView_WeekLabel">
        <item name="android:textColor">@color/month_week_name</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/month_week_label_padding_left</item>
    </style>
    <style name="MonthView_border_horizontal">
        <item name="android:background">@color/month_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>
    <style name="MonthView_border_vertical">
        <item name="android:background">@color/month_line</item>
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="widget_label">
        <item name="android:textSize">@dimen/widget_label_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widget_label</item>
        <item name="android:paddingTop">@dimen/widget_label_padding_top</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/widget_label_margin_left</item>
    </style>
    <style name="header_line">
        <item name="android:background">@drawable/widget_top_bg_line</item>
        <item name="android:layout_width">2.0dip</item>
        <item name="android:layout_height">51.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
    </style>
    <style name="header_today">
        <item name="android:textSize">@dimen/widget_label_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widget_label</item>
        <item name="android:background">@drawable/widgetheader_today_btn_selector</item>
        <item name="android:layout_width">@dimen/header_today_width</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:text">@string/today_theme</item>
        <item name="android:contentDescription">@string/accessibility_today_button</item>
    </style>
    <style name="header_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">0.0dip</item>
    </style>
    <style name="header_refresh" parent="@style/header_btn">
        <item name="android:background">@drawable/widgetheader_refresh_btn_selector</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:src">@drawable/widget_planner_ic_refresh</item>
        <item name="android:contentDescription">@string/accessibility_refresh_button</item>
    </style>
    <style name="header_add" parent="@style/header_btn">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/widgetheader_add_btn_selector</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:layout_width">@dimen/add_btn_width</item>
        <item name="android:src">@drawable/widget_planner_ic_add</item>
        <item name="android:contentDescription">@string/accessibility_create_event_button</item>
    </style>
    <style name="header_arrow_left">
        <item name="android:background">@drawable/widgetheader_arrow_left_btn_selector</item>
        <item name="android:layout_width">22.0dip</item>
        <item name="android:layout_height">22.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:contentDescription">@string/accessibility_previous_day_button</item>
    </style>
    <style name="header_arrow_right">
        <item name="android:background">@drawable/widgetheader_arrow_right_btn_selector</item>
        <item name="android:layout_width">22.0dip</item>
        <item name="android:layout_height">22.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:contentDescription">@string/accessibility_next_day_button</item>
    </style>
    <style name="month_move_button">
        <item name="android:textSize">@dimen/month_move_btn_text_size</item>
        <item name="android:textColor">@color/month_title_color</item>
        <item name="android:background">@drawable/widgetheader_button_selector</item>
        <item name="android:layout_width">@dimen/month_move_btn_width</item>
        <item name="android:layout_height">@dimen/month_move_btn_height</item>
        <item name="android:layout_marginTop">@dimen/month_move_btn_margin_top</item>
    </style>
    <style name="month_move_button_text">
        <item name="android:textSize">@dimen/month_move_btn_text_size</item>
        <item name="android:textColor">@color/month_title_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WidgetDayOfWeekStyle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">-5.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="WidgetDayStyle">
        <item name="android:textSize">24.0dip</item>
        <item name="android:gravity">bottom|left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/widget_day_num_top_padding</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="WidgetMonthStyle">
        <item name="android:textSize">24.0dip</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-4.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
