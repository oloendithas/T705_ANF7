<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:paddingRight="@dimen/magazine_card_margin_card_right" android:layout_width="@dimen/magazine_card_width" android:layout_height="@dimen/magazine_card_height">
        <FrameLayout android:layout_width="@dimen/magazine_card_albumart_area" android:layout_height="@dimen/magazine_card_albumart_area_height" android:layout_marginLeft="@dimen/magazine_card_albumart_maring_left" android:layout_marginTop="@dimen/magazine_card_albumart_maring_top">
            <ImageView android:id="@id/album_view" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitXY" android:contentDescription="@string/tts_music_player" />
            <ProgressBar android:layout_gravity="center" android:id="@id/albumart_loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@android:style/Widget.DeviceDefault.ProgressBar.Small" />
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/magazine_card_margin_card_left" android:layout_marginRight="@dimen/magazine_card_margin_card_right">
            <TextView android:textSize="@dimen/magazine_card_artist" android:textColor="#ff444444" android:ellipsize="marquee" android:id="@id/artist" android:focusable="true" android:focusableInTouchMode="true" android:duplicateParentState="true" android:layout_width="fill_parent" android:layout_height="@dimen/magazine_card_artist_height" android:layout_marginTop="@dimen/magazine_card_margin_artist_top" android:singleLine="true" android:selectAllOnFocus="true" android:marqueeRepeatLimit="marquee_forever" android:fontFamily="sec_roboto_light" />
            <TextView android:textSize="@dimen/magazine_card_title" android:textColor="#ff444444" android:ellipsize="marquee" android:id="@id/title" android:focusable="true" android:duplicateParentState="true" android:layout_width="fill_parent" android:layout_height="@dimen/magazine_card_title_height" android:layout_marginTop="@dimen/magazine_card_margin_title_top" android:text="@string/no_songs_playing" android:singleLine="true" android:selectAllOnFocus="true" android:marqueeRepeatLimit="marquee_forever" android:fontFamily="Roboto_Regular" />
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/magazine_card_control_button_size" android:layout_marginLeft="@dimen/magazine_card_margin_prev_left" android:layout_marginTop="@dimen/magazine_card_margin_controller_top">
                <ImageView android:id="@id/prev_btn" android:focusable="true" android:layout_width="@dimen/magazine_card_control_button_size" android:layout_height="@dimen/magazine_card_control_button_size" android:src="@drawable/magazine_card_control_prev_btn_selecter" android:contentDescription="@string/tts_previous" />
                <ImageView android:id="@id/play_pause_btn" android:focusable="true" android:layout_width="@dimen/magazine_card_control_button_size" android:layout_height="@dimen/magazine_card_control_button_size" android:layout_marginLeft="@dimen/magazine_card_margin_control_left" android:layout_marginRight="@dimen/magazine_card_margin_control_left" android:src="@drawable/magazine_card_control_pause_btn_selecter" />
                <ImageView android:id="@id/next_btn" android:focusable="true" android:layout_width="@dimen/magazine_card_control_button_size" android:layout_height="@dimen/magazine_card_control_button_size" android:src="@drawable/magazine_card_control_next_btn_selecter" android:contentDescription="@string/tts_next" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>